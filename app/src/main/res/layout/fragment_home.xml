<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".features.home.ui.HomeFragment">

	<EditText
		android:id="@+id/search_text_field"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="25dp"
		android:layout_marginEnd="16dp"
		android:background="@drawable/search_text_field_style"
		android:drawableLeft="?android:attr/actionModeWebSearchDrawable"
		android:drawablePadding="8dp"
		android:drawableTint="@color/white"
		android:hint="@string/search"
		android:isScrollContainer="false"
		android:minHeight="48dp"
		android:padding="8dp"
		android:textColorHint="@color/white"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<LinearLayout
		android:id="@+id/house_crypto_info_1"
		android:layout_width="0dp"
		android:layout_height="60dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="20dp"
		android:layout_marginEnd="16dp"
		android:background="@drawable/house_crypto_info_style"
		android:gravity="center"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/search_text_field">

		<ImageView
			android:id="@+id/crypto_icon_1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="10dp"
			tools:src="@tools:sample/avatars" />

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:orientation="vertical">

			<TextView
				android:id="@+id/crypto_full_name_1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="bottom"
				android:text="@string/full_name_of_crypto"
				android:textColor="@color/black"
				android:textSize="16sp"
				android:textStyle="bold"
				app:lineHeight="16dp" />

			<TextView
				android:id="@+id/crypto_name_1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:text="@string/abbrev_name"
				android:textColor="@color/black" />

		</LinearLayout>

		<TextView
			android:id="@+id/crypto_price_1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/crypto_price"
			android:textColor="@color/black" />

		<TextView
			android:id="@+id/crypto_behaviour_1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/last_behaviour_info"
			android:textColor="@color/black" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/house_crypto_info_2"
		android:layout_width="0dp"
		android:layout_height="60dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="5dp"
		android:layout_marginEnd="16dp"
		android:background="@drawable/house_crypto_info_style"
		android:gravity="center"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/house_crypto_info_1">

		<ImageView
			android:id="@+id/crypto_icon_2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="10dp"
			tools:src="@tools:sample/avatars" />

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:orientation="vertical">

			<TextView
				android:id="@+id/crypto_full_name_2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="bottom"
				android:text="@string/full_name_of_crypto"
				android:textColor="@color/black"
				android:textSize="16sp"
				android:textStyle="bold"
				app:lineHeight="16dp" />

			<TextView
				android:id="@+id/crypto_name_2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:text="@string/abbrev_name"
				android:textColor="@color/black" />

		</LinearLayout>

		<TextView
			android:id="@+id/crypto_price_2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/crypto_price"
			android:textColor="@color/black" />

		<TextView
			android:id="@+id/crypto_behaviour_2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/last_behaviour_info"
			android:textColor="@color/black" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/house_crypto_info_3"
		android:layout_width="0dp"
		android:layout_height="60dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="5dp"
		android:layout_marginEnd="16dp"
		android:background="@drawable/house_crypto_info_style"
		android:gravity="center"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/house_crypto_info_2">

		<ImageView
			android:id="@+id/crypto_icon_3"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="10dp"
			tools:src="@tools:sample/avatars" />

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:orientation="vertical">

			<TextView
				android:id="@+id/crypto_full_name_3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="bottom"
				android:text="@string/full_name_of_crypto"
				android:textColor="@color/black"
				android:textSize="16sp"
				android:textStyle="bold"
				app:lineHeight="16dp" />

			<TextView
				android:id="@+id/crypto_name_3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:text="@string/abbrev_name"
				android:textColor="@color/black" />

		</LinearLayout>

		<TextView
			android:id="@+id/crypto_price_3"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/crypto_price"
			android:textColor="@color/black" />

		<TextView
			android:id="@+id/crypto_behaviour_3"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/last_behaviour_info"
			android:textColor="@color/black" />

	</LinearLayout>

	<Button
		android:id="@+id/crypto_list_brn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="96dp"
		android:layout_marginEnd="96dp"
		android:layout_marginBottom="16dp"
		android:backgroundTint="@color/secondary"
		android:paddingHorizontal="10dp"
		android:paddingVertical="15dp"
		android:text="@string/crypto_list"
		android:textAllCaps="false"
		android:textColor="@color/white"
		android:textSize="16sp"
		android:textStyle="bold"
		app:cornerRadius="10dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>